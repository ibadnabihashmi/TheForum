extends ../layout
block content
    .page-header
        h3 Sign in
    .row
        .col.s12.z-depth-1.pageMargin
            .row
                form.col.s12(method='POST')
                    .row
                        .input-field.col.s12.l6
                            i.mdi-content-mail.prefix
                            input.validate(type='text', name='email', id='email',autofocus=true)
                            label(for='email') Email
                        .input-field.col.s12.l6
                            i.mdi-communication-vpn-key.prefix
                            input.validate(type='password', name='password', id='password')
                            label(for='password') Password
                    .row.center-align
                        .col.s12.m6
                            button.btn.btn-invisume.waves-effect.waves-light.btn-100(type='submit', name='action')
                                | Login
                                i.mdi-content-send.right
                        .col.s12.m6
                            a.waves-effect.waves-block.btn-flat.btn-100(href='/forgotCompany', style='color: #0873BF;') Forgot you password?
            .row
                .col.s12.m6.l0.center-align
                    a.btn.btn-facebook.waves-effect.waves-light.btn-100(href='/auth/facebook')
                        i.fa.fa-facebook
                        | acebook
                .col.s12.m6.l0.center-align
                    a.btn.btn-google.waves-effect.waves-light.btn-100(href='/auth/google')
                        i.fa.fa-google-plus
                        | oogle
