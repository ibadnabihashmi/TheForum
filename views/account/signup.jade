extends ../layout
block content
    .page-header
        h3 Sign up
    .row
        .col.s12.z-depth-1.pageMargin
            .row
                form.col.m12(id='signup-form', method='POST')
                    input(type='hidden', name='_csrf', value=_csrf)
                    .row
                        .input-field.col.s12.l6
                            i.mdi-content-mail.prefix
                            input.validate(type='email', name='email', id='email',autofocus=true)
                            label(for='email') Email
                        .input-field.col.s12.l6
                            i.mdi-communication-vpn-key.prefix
                            input(type='password',name='password', id='password',autofocus=true)
                            label(for='password') Password
                        .input-field.col.s12.l6
                            i.mdi-communication-vpn-key.prefix
                            input(type='password',name='confirmPassword', id='confirmPassword',autofocus=true)
                            label(for='confirmPassword') Confirm Password
                    .row
                        .col.s12.m6
                            button.btn.waves-effect.waves-light(type='submit', name='action')
                                | Signup
                                i.mdi-content-send.right
